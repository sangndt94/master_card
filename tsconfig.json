{
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "lib": ["es2016", "dom"],
        "target": "es2016",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true
    },
    "exclude": ["node_modules", "dist"]
}
